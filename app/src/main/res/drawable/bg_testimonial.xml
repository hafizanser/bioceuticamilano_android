<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- subtle border -->
    <stroke android:width="1dp" android:color="#10000000" />

    <!-- Rounded corners (single corners element with per-corner attributes) -->
    <corners
        android:topLeftRadius="@dimen/_5sdp"
        android:bottomLeftRadius="@dimen/_30sdp"
        android:topRightRadius="@dimen/_30sdp"
        android:bottomRightRadius="@dimen/_5sdp" />

    <!-- optional padding so text doesn't stick to edges when used directly -->
    <padding
        android:left="@dimen/_10sdp"
        android:top="@dimen/_10sdp"
        android:right="@dimen/_10sdp"
        android:bottom="@dimen/_10sdp" />

</shape>
