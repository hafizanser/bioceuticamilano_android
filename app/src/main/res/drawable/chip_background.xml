<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected via Chip (state_checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E31E7A" />
            <corners android:radius="24dp" />
            <size android:height="44dp" />
            <padding android:left="12dp" android:top="0dp" android:right="12dp" android:bottom="0dp" />
        </shape>
    </item>

    <!-- Selected via TextView (state_selected) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E31E7A" />
            <corners android:radius="24dp" />
            <size android:height="44dp" />
            <padding android:left="12dp" android:top="0dp" android:right="12dp" android:bottom="0dp" />
        </shape>
    </item>

    <!-- Pressed state (visual feedback) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D01766" />
            <corners android:radius="24dp" />
            <size android:height="44dp" />
            <padding android:left="12dp" android:top="0dp" android:right="12dp" android:bottom="0dp" />
        </shape>
    </item>

    <!-- Default (unselected) state: white pill with subtle border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#ECECEC" />
            <corners android:radius="24dp" />
            <size android:height="44dp" />
            <padding android:left="12dp" android:top="0dp" android:right="12dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>
