<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/home_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_10ssp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_back"
            android:contentDescription="favorite" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Details"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_unfav_icon"
            android:contentDescription="favorite" />
    </LinearLayout>

    <!-- Header: Trustpilot + badges and title -->
    <androidx.core.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context="com.bioceuticamilano.DetailActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_4sdp">

                <!-- Rating & chips container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rating_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_trust_pilot"/>

                        <!-- Dynamic stars will be added into this container -->
                        <LinearLayout
                            android:id="@+id/ratingStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tvRatingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0.0)"
                            android:textColor="#6b7280"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginStart="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chipsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chipVegan"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            android:gravity="center"
                            android:text="Vegan"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="@dimen/_14ssp"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/chipDerm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            android:gravity="center"
                            android:text="Dermatologically Tested"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="@dimen/_14ssp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- trailing spacer / empty area to match design -->
            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BioInfusion+ | Microinfusion System"
                android:textColor="#111111"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                android:paddingVertical="@dimen/_8sdp" />

            <!-- Image carousel placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/order_1"
                    android:contentDescription="product" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regain youthful, supple, and wrinkle-free skin in just a few applications at home. Guaranteed results or a full refund!"
                android:textColor="#6b7280"
                android:textSize="@dimen/_11ssp"
                android:paddingTop="@dimen/_12sdp"
                android:lineSpacingExtra="@dimen/_4sdp" />

            <!-- Deal selector cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_12sdp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most chosen"
                            android:textColor="#ffcc00"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 KITS + FREE"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13ssp"
                            android:paddingTop="@dimen/_3sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¬138.00"
                            android:textColor="#0f9d58"
                            android:paddingTop="@dimen/_3sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textColor="#6b7280"
                            android:gravity="end"
                            android:paddingTop="@dimen/_3sdp"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 KIT"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:paddingTop="@dimen/_3sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¬89.00"
                            android:textColor="#111111"
                            android:paddingTop="@dimen/_3sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textColor="#6b7280"
                            android:gravity="end"
                            android:paddingTop="@dimen/_3sdp"
                            android:textSize="@dimen/_9ssp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Primary CTA buttons -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:backgroundTint="#ff2b7b"
                android:text="ADD TO CART"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:layout_marginHorizontal="@dimen/_4sdp" />

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="#ffffff"
                android:text="BUY NOW - FAST CHECKOUT"
                android:textColor="#ff2b7b"
                android:textAllCaps="true"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:stateListAnimator="@null"
                android:background="@drawable/bg_buy_now" />

            <!-- Customer Results grid -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Results"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <GridView
                android:id="@+id/gvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:horizontalSpacing="@dimen/_5sdp"
                android:verticalSpacing="@dimen/_5sdp"
                android:stretchMode="columnWidth"
                android:paddingTop="@dimen/_5sdp"
                android:isScrollContainer="false" />

            <!-- Recommended for you list (horizontal) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended for You"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example recommended item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70ssp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/order_1"
                                android:contentDescription="rec" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BioLift+ Anti-Aging Serum"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¬49.00"
                                    android:textColor="#0f9d58"
                                    android:paddingTop="@dimen/_3sdp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:text="Add"
                                android:textSize="@dimen/_10ssp"
                                android:backgroundTint="#ff2b7b"
                                android:textColor="#fff" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- FAQ section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- FAQ items -->
                <LinearLayout
                    android:id="@+id/faq_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How does it work?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Who is it suitable for?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Is it safe and painless?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Where can I use it?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What's in it?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="INCI and Certifications"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Satisfaction Guarantee"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Can I pay on delivery?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shipping and Returns"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

