<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/home_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_10ssp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_back"
            android:contentDescription="favorite" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Details"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_unfav_icon"
            android:contentDescription="favorite" />
    </LinearLayout>

    <!-- Header: Trustpilot + badges and title -->
    <androidx.core.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context="com.bioceuticamilano.DetailActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_4sdp">

                <!-- Rating & chips container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rating_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_trust_pilot"/>

                        <!-- Dynamic stars will be added into this container -->
                        <LinearLayout
                            android:id="@+id/ratingStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tvRatingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0.0)"
                            android:textColor="#6b7280"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginStart="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chipsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chipVegan"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            android:gravity="center"
                            android:text="Vegan"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="@dimen/_14ssp"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/chipDerm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            android:gravity="center"
                            android:text="Dermatologically Tested"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="@dimen/_14ssp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- trailing spacer / empty area to match design -->
            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BioInfusion+ | Microinfusion System"
                android:textColor="#111111"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                android:paddingVertical="@dimen/_8sdp" />

            <!-- Image carousel placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                android:clipToPadding="false">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="horizontal" />

            </androidx.cardview.widget.CardView>

            <!-- Dots indicator -->
            <LinearLayout
                android:id="@+id/llDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_6sdp">
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regain youthful, supple, and wrinkle-free skin in just a few applications at home. Guaranteed results or a full refund!"
                android:textColor="#6b7280"
                android:textSize="@dimen/_11ssp"
                android:paddingTop="@dimen/_12sdp"
                android:lineSpacingExtra="@dimen/_4sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose You Deal"
                android:textColor="@color/quantum_purple"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"/>

            <!-- Deal selector cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_12sdp"
                android:weightSum="2">

                <!-- First option: ConstraintLayout so badge can overlap card at top center -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_option_1"
                        android:layout_width="0dp"
                        app:strokeColor="@color/quantum_googgreen"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="@dimen/_2ssp"
                        android:layout_height="@dimen/_200sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_12sdp">

                            <View
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:backgroundTint="@color/quantum_googgreen"
                                android:background="@drawable/dot_active" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_26sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 KITS + FREE"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_13ssp"
                                    android:layout_marginTop="@dimen/_3sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="€138.00"
                                    android:textColor="#0f9d58"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="9 Treatments"
                                    android:textColor="#6b7280"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:textSize="@dimen/_10ssp" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:backgroundTint="#0f9d58"
                                    android:text="+ FREE EXTRAS"
                                    android:textSize="@dimen/_8sdp"
                                    android:textColor="#ffffff"
                                    android:textAllCaps="true" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#EEF2F6"
                                    android:layout_marginTop="@dimen/_8sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="• In Stock"
                                    android:textColor="#0f9d58"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="@dimen/_6sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sept 29 - Oct 11"
                                    android:textColor="#0f9d58"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="@dimen/_4sdp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Badge pill overlapping top center of the card -->
                    <TextView
                        android:id="@+id/badge_most_chosen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_pill_yellow"
                        android:text="Most chosen"
                        android:textColor="#000000"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="@id/card_option_1"
                        app:layout_constraintStart_toStartOf="@id/card_option_1"
                        app:layout_constraintEnd_toEndOf="@id/card_option_1"
                        app:layout_constraintBottom_toTopOf="@id/card_option_1"
                        android:translationZ="@dimen/_5sdp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Second option: simple card -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_option_2"
                        android:layout_width="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="@dimen/_1ssp"
                        android:layout_height="@dimen/_200sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/_12sdp">

                            <View
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/dot_inactive"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 KIT"
                                android:textStyle="bold"
                                android:textSize="@dimen/_13ssp"
                                android:layout_marginTop="@dimen/_3sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="€89.00"
                                android:textColor="#0f9d58"
                                android:paddingTop="@dimen/_3sdp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="€149.00"
                                android:textColor="@color/gray_text"
                                android:paddingTop="@dimen/_3sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 Treatments"
                                android:textColor="#6b7280"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/_3sdp"
                                android:textSize="@dimen/_10ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#EEF2F6"
                                android:layout_marginTop="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• In Stock"
                                android:textColor="#0f9d58"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/_6sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sept 29 - Oct 11"
                                android:textColor="#0f9d58"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/_4sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- Primary CTA buttons -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="#ff2b7b"
                app:strokeColor="@color/pink_accent"
                android:textAllCaps="true"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:stateListAnimator="@null">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD TO CART"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBuyNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="#ffffff"
                app:strokeColor="@color/pink_accent"
                android:textAllCaps="true"

                android:layout_marginHorizontal="@dimen/_4sdp"
                android:stateListAnimator="@null">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUY NOW - FAST CHECKOUT"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ff2b7b" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Customer Results grid -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Results"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <GridView
                android:id="@+id/gvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:horizontalSpacing="@dimen/_5sdp"
                android:verticalSpacing="@dimen/_5sdp"
                android:stretchMode="columnWidth"
                android:paddingTop="@dimen/_5sdp"
                android:isScrollContainer="false" />

            <!-- Recommended for you list (horizontal) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended for You"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example recommended item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70ssp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/order_1"
                                android:contentDescription="rec" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_6sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BioLift+ Anti-Aging Serum"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="€49.00"
                                    android:textColor="#0f9d58"
                                    android:paddingTop="@dimen/_3sdp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:text="Add"
                                android:textSize="@dimen/_10ssp"
                                android:backgroundTint="#ff2b7b"
                                android:textColor="#fff" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- FAQ section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_6sdp">

                <!-- FAQ items -->
                <LinearLayout
                    android:id="@+id/faq_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How does it work?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Who is it suitable for?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Is it safe and painless?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Where can I use it?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What's in it?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="INCI and Certifications"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
                    android:id="@+id/faq_item_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_13sdp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Satisfaction Guarantee"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#111111" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="expand" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F6" />

                <LinearLayout
