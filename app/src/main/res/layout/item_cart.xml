<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    android:background="@drawable/rounded_white_card">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_cart"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToOutline="true" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_cart"
        android:padding="@dimen/_4sdp"
        android:background="@drawable/circle_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivThumb"
        android:layout_marginStart="@dimen/_12sdp"
        android:textSize="@dimen/_13sdp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivThumb"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        android:text="Bioinlusion Sistema di Micro......"
        android:textStyle="bold"
        android:maxLines="2" />

    <TextView
        android:id="@+id/tvBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivThumb"
        android:layout_below="@id/tvTitle"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvOldPrice"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:background="@drawable/rounded_oval_card"
        android:backgroundTint="@color/primary_pink"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_8ssp"
        android:text="Save 20%" />

    <TextView
        android:id="@+id/tvOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivThumb"
        android:layout_below="@id/tvBadge"
        android:text="€297.00"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBadge"
        app:layout_constraintBottom_toBottomOf="@id/ivThumb" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvOldPrice"
        android:layout_toEndOf="@id/tvOldPrice"
        android:layout_marginStart="@dimen/_3sdp"
        android:text="€138.00"
        app:layout_constraintBottom_toBottomOf="@+id/tvOldPrice"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toTopOf="@+id/tvOldPrice"
        app:layout_constraintStart_toEndOf="@+id/tvOldPrice"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tvPrice"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@+id/tvOldPrice"
        app:layout_constraintEnd_toEndOf="@+id/ivDelete"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice">

        <ImageView
            android:id="@+id/btnMinus"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:src="@drawable/ic_minus"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/circle_bg"/>

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_36sdp"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:text="99" />

        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:src="@drawable/ic_add"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/circle_bg"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
