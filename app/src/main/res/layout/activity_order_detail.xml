<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:fitsSystemWindows="true"
    tools:context=".OrderDetailActivity">

    <!-- Top bar -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginHorizontal="@dimen/_20sdp"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Orders Detail"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll"
        android:layout_marginVertical="@dimen/_18sdp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp">

            <!-- Order summary card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_13sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvSummaryToggle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Hide order summar"
                            android:textColor="#0055CF"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvSummaryTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="€138.00"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="#E6E6E6"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp" />

                    <!-- items list inside card -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_13sdp"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="#E6E6E6"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp" />

                    <!-- summary rows -->
                    <LinearLayout
                        android:id="@+id/llSummaryRows"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_13sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Subtotal"
                                android:textColor="#666"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="€119,70"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Discount"
                                android:textColor="#666"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-€119,70"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Shipping"
                                android:textColor="#666"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/tvShipping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gratis"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#333" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E6E6E6"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textStyle="bold"
                                android:textSize="@dimen/_18ssp" />

                            <LinearLayout
                                android:layout_marginStart="@dimen/_8sdp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvCurrencyLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EUR"
                                    android:layout_gravity="end"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="#666" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="€0.00"
                                android:textStyle="bold"
                                android:textSize="@dimen/_18ssp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTaxNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Including taxes for an amount of €0.00"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#888"
                            android:layout_marginTop="@dimen/_8sdp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Order header and date -->
            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #3265"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_18sdp" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmed on May 28th for order £D212"
                android:textColor="#666"
                android:layout_marginTop="@dimen/_6sdp" />

            <!-- Buy again button -->



            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/btnBuyAgain"
                android:text="Buy again"
                android:textSize="@dimen/_13sdp"
                android:textAllCaps="false"
                android:textColor="#107C08"
                android:background="@drawable/btn_black_rounded"
                app:backgroundTint="@null"
                android:backgroundTint="@color/white"
                />


            <!-- Tracking card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_13sdp"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BRT Italy"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/tvTrackingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="170197011631657"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="#4785FF"/>
                </LinearLayout>

                    <!-- simple timeline -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_timeline"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp">


                            <LinearLayout
                                android:layout_marginStart="@dimen/_12sdp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coming soon"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="May 29"
                                    android:textColor="#888"
                                    android:layout_marginTop="@dimen/_4sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp">


                            <LinearLayout
                                android:layout_marginStart="@dimen/_12sdp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coming soon"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="May 28"
                                    android:textColor="#888"
                                    android:layout_marginTop="@dimen/_4sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact / addresses card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_13sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact details"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andrea Rimmaudo"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="#666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping address"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:text="Andrea Rimmaudo, Avenida Mediterraneo 5, 6 FTE, 1990-156 Lisboa, distretto di Lisbona, Portogallo."
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="#666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+351 910 869 164"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="#1473FF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billing address"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andrea Rimmaudo, Via Don Bartolomeo Grazioli 14, 10137 Tornio, Torino Italia"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="#666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3348225285"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginTop="@dimen/_8sdp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- footer links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refund Policy"
                    android:textColor="#1473FF"
                    android:layout_marginEnd="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping"
                    android:textColor="#1473FF"
                    android:layout_marginEnd="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textColor="#1473FF"
                    android:layout_marginEnd="@dimen/_12sdp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and conditions of service"
                    android:textColor="#1473FF"
                    android:layout_marginEnd="@dimen/_12sdp" />

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact details"
                    android:textColor="#1473FF"
                    android:layout_marginEnd="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
