<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/rounded_white_card">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvFilterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:text="Refine your product search"
        android:textSize="@dimen/_14ssp"/>

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/iv_filter_cross"
        android:layout_gravity="end"/>


</FrameLayout>
    <!-- Sort By -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SORT BY"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        android:layout_marginTop="@dimen/_5sdp">

        <!-- Replaced Chip with TextView so state_selected can be used and toggled in code -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipFeatured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured"
            android:gravity="center"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="@dimen/chip_text_size"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipLowToHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Low to high"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="@dimen/chip_text_size"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipHighToLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price High to Low"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="@dimen/chip_text_size"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newest"
            android:gravity="center"

            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="@dimen/chip_text_size"
            android:clickable="true"
            android:focusable="true" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Price Range -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRICE RANGE"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="6dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"  app:singleSelection="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipUnder50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Under €50"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chip50to100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€50 - €100"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chip100to150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€100 - €150"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipOver150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over €150"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Skin Type -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SKIN TYPE"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="6dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSkin"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"  android:layout_height="wrap_content"
        app:singleSelection="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipAllSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All skin types"
            android:paddingHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/chip_background"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chipDry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dry"
            android:paddingHorizontal="@dimen/_20sdp"
            android:background="@drawable/chip_background"
            android:gravity="center"
            android:textColor="@color/chip_text_selector"
            android:clickable="true"
            android:focusable="true" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center">





        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Reset"
            android:background="@drawable/btn_black_rounded"
            app:backgroundTint="@null"
            app:background="@null"
            android:textSize="@dimen/_13ssp"
            android:backgroundTint="#EDEFF6"
            android:textColor="#3E4650"
            android:layout_marginEnd="12dp"/>


        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Filter"
            android:textSize="@dimen/_13ssp"
            android:background="@drawable/btn_black_rounded"
            app:backgroundTint="@null"
            app:background="@null"
            android:backgroundTint="@color/pink_accent"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
