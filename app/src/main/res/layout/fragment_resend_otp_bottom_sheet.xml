<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_white_card">

    <ImageView
        android:id="@+id/ivResendIcon"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/otp_resend"
        android:contentDescription="otp resend" />

    <TextView
        android:id="@+id/tvResendMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your OTP has been resend"
        android:textColor="#6B6B6B"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp" />

    <TextView
        android:id="@+id/tvResendTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Successfully"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="@dimen/_18ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp" />

    <Button
        android:id="@+id/btnResendContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:backgroundTint="@color/pink_accent"
        android:text="Continue"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_8sdp" />

</LinearLayout>
