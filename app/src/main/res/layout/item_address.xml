<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="@dimen/_10sdp"
    android:elevation="@dimen/_4sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_gravity="center"
    android:backgroundTintMode="src_in">

    <!-- Top row: radio + label, DEFAULT badge, Edit -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/ivRadio"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_address_radio"
            android:contentDescription="radio" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivRadio"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="HOME"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/tvDefaultBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="DEFAULT"
            android:textSize="@dimen/_10ssp"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTintMode="src_in" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Edit"
            android:textColor="#5D6B80"
            android:textSize="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp" />

        <ImageView
            android:id="@+id/ivEditIcon"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:contentDescription="edit" />

    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F2F5"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Content rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#9AA2AA"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="@dimen/_12sdp"
                android:textColor="#111111"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#9AA2AA"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Al aidh madinah, almonoara al madinah province 43314, Madinah, Saudia Arabia"
                android:textSize="@dimen/_12sdp"
                android:textColor="#6C7480"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#9AA2AA"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+966-99-1067004"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="#111111" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>