<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addCard"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:padding="@dimen/_16sdp"
    tools:context=".AddCardActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/add_card_screen"-->
<!--            android:alpha="0.4"-->
<!--            android:scaleType="fitXY"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingTop="@dimen/_32sdp"
            android:fitsSystemWindows="true">

            <!-- Toolbar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:contentDescription="back"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Card"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <!-- Cardholder Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardholder Name *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                app:boxCornerRadiusTopStart="@dimen/_6sdp"
                app:boxCornerRadiusTopEnd="@dimen/_6sdp"
                app:boxCornerRadiusBottomStart="@dimen/_6sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCardholderName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="John Doe"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="#A6A6A6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Card Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your 16-digit card number"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_8sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number *"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                app:boxCornerRadiusTopStart="@dimen/_6sdp"
                app:boxCornerRadiusTopEnd="@dimen/_6sdp"
                app:boxCornerRadiusBottomStart="@dimen/_6sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/add_card_image">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="**** **** **** 1234"
                    android:inputType="number"
                    android:maxLength="19"
                    android:textColor="@color/black"
                    android:textColorHint="#A6A6A6" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your 16-digit card number"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_4sdp" />

            <!-- Expiry & CVC Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_17sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry Date *"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_6sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etExpiry"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:hint="12/24"
                            android:inputType="text"
                            android:focusable="false"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHint="#A6A6A6" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MM/YY format"
                        android:textColor="#9E9E9E"
                        android:textSize="@dimen/_7ssp"
                        android:layout_marginTop="@dimen/_6sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CVC/CCV *"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCVC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_6sdp"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCVC"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:hint="***"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHint="#A6A6A6" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-4 digits on back of card"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- ZIP Code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing ZIP Code *"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_17sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/_6sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etZip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="12345"
                    android:inputType="number"
                    android:padding="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textColorHint="#A6A6A6" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required for card verification"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_6sdp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:text="Save Card"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_4sdp"
                app:backgroundTint="@color/primary_pink" />

        </LinearLayout>
    </FrameLayout>


</androidx.core.widget.NestedScrollView>