<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_16sdp"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping Cart"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="-32dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCart"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/notesHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_120sdp" />



    <!-- Collapsed header sits above the fixed bottom bar -->
    <LinearLayout
        android:id="@+id/notesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/bottomBar"
        android:padding="@dimen/_16sdp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNotesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add notes for the corner"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivNotesArrow"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>

    <!-- Notes content (hidden by default) sits above the notes header -->
    <LinearLayout
        android:id="@+id/notesContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/notesHeader"
        android:padding="@dimen/_16sdp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_card"
            android:padding="@dimen/_16sdp"
            android:text="Regain youthful, supple, and wrinkle-free skin in just a few applications at home. Guaranteed results or a full refund!" />

    </LinearLayout>

    <!-- Fixed bottom bar: Order button + payment icons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:background="@android:color/transparent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:text="Order Now â‚¬138.00"
            android:backgroundTint="#E32C79"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/btn_black_rounded"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp">

            <!-- placeholder icons -->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pay"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_postepay"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_amex"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mastercard"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visa" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
