<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Order"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp" />

            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp" />

        </LinearLayout>

        <!-- Order card with timeline -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:padding="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16ssp">

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #79888"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvEta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrived today 8PM"
                    android:textColor="#666"
                    android:layout_marginTop="@dimen/_6sdp" />

                <!-- timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:id="@+id/dot1"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/track_dot_active" />

                        <View
                            android:id="@+id/line1"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/track_line_active" />

                        <View
                            android:id="@+id/dot2"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:background="@drawable/track_dot_active" />

                        <View
                            android:id="@+id/line2"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/track_line_active" />

                        <View
                            android:id="@+id/dot3"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:background="@drawable/track_dot_active" />

                        <View
                            android:id="@+id/line3"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/track_line_inactive" />

                        <View
                            android:id="@+id/dot4"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:background="@drawable/track_dot_inactive" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvStep1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ordered  Monday, May 23"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvStep2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipped  Monday, May 23"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_28sdp"
                           />

                        <TextView
                            android:id="@+id/tvStep3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out for delivery"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_30sdp"
                            />

                        <TextView
                            android:id="@+id/tvStep4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arriving today by 8PM"
                            android:textColor="#888"
                            android:layout_marginTop="@dimen/_30sdp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- courier card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped with GLS"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courier Tracking ID"
                    android:layout_marginTop="6dp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/tvCourierId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000036786577"
                    android:textColor="#1473FF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Track shipment button -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Track Shipment"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_black_rounded"
            app:backgroundTint="@null" />

        <!-- Customer service section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Service"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/customerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Call"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="800 090 288"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service active from Monday to Friday from 8:00 to 10:00 and from 16:00 to 19:00"
                    android:textSize="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/dim_gray" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallNow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_black_rounded"
                    app:backgroundTint="@null"
                    android:text="Call Now"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="#DFF0DC"
                    android:textColor="#167C2D"/>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_12sdp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmailNow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_black_rounded"
                    app:backgroundTint="@null"
                    android:text="Write an Email"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="#FFE6EF"
                    android:textColor="#E31B66"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
