<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Order"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <!-- Order card with timeline -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:padding="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16ssp">

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #79888"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvEta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrived today 8PM"
                    android:textColor="#666"
                    android:layout_marginTop="@dimen/_6sdp" />

                <!-- timeline -->
                <LinearLayout
                    android:id="@+id/llTimelineRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:padding="4dp">

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical">

                            <View
                                android:id="@+id/line1"
                                android:layout_width="4dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/track_line_inactive"
                                android:layout_marginTop="4dp"
                                 />

                            <View
                                android:id="@+id/dot1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/track_dot_inactive" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/tvStep1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ordered Monday, May 23"
                                android:textStyle="bold"
                                android:layout_marginTop="-4dp"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/line2"
                                android:layout_width="4dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/track_line_inactive" />

                            <View
                                android:id="@+id/dot2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/track_dot_inactive" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/tvStep2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:text="Shipped Monday, May 23"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="wrap_content">


                            <View
                                android:id="@+id/line3"
                                android:layout_width="4dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/track_line_inactive" />

                            <View
                                android:id="@+id/dot3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/track_dot_inactive" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/tvStep3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:text="Out for delivery"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Step 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                       >

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/line4"
                                android:layout_width="4dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="-4dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/track_line_inactive"
                                 />

                            <View
                                android:id="@+id/dot4"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:background="@drawable/track_dot_inactive" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/tvStep4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Arriving today by 8PM"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:textSize="16sp" />
                            
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- courier card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped with GLS"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courier Tracking ID"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvCourierId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000036786577"
                    android:textColor="#454D60"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Track shipment button -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Track Shipment"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_black_rounded"
            app:backgroundTint="@null" />

        <!-- Customer service section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Service"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/customerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Call"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="800 090 288"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service active from Monday to Friday from 8:00 to 10:00 and from 16:00 to 19:00"
                    android:textSize="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/dim_gray" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallNow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_black_rounded"
                    app:backgroundTint="@null"
                    android:text="Call Now"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="#DFF0DC"
                    android:textColor="#167C2D"/>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_12sdp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmailNow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_black_rounded"
                    app:backgroundTint="@null"
                    android:text="Write an Email"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="#FFE6EF"
                    android:textColor="#E31B66"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
