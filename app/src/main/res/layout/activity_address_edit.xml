<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bg"
    android:paddingTop="@dimen/_16sdp"
    android:paddingBottom="@dimen/_20sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:paddingHorizontal="@dimen/_16sdp"

        android:layout_marginBottom="@dimen/_8sdp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvCancelTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666666"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/_10sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingBottom="@dimen/_20sdp">

        <!-- Delivery Location section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Location"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_12sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_location"
                android:contentDescription="location" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="Select Location"
                android:textColor="#222222"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <!-- Address Details title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- First Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="@dimen/_10ssp"
            android:textSize="@dimen/_10ssp"
            android:hint="John"
            android:inputType="textPersonName" />

        <!-- Last Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="@dimen/_10ssp"
            android:hint="Doe"
            android:inputType="textPersonName" />

        <!-- Mobile Number (country selector + number) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp" />

        <LinearLayout
            android:id="@+id/mobileContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_rounded"
            android:gravity="center_vertical">

            <!-- CountryCodePicker (hidden UI used for selection and flag access) -->
            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/ic_flag_us"
                    android:contentDescription="flag" />

                <TextView
                    android:id="@+id/tvCc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  +1  "
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_6sdp" />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_down_arrow"
                    android:contentDescription="down" />
            </LinearLayout>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_10ssp"
                android:background="@android:color/transparent"
                android:hint="123456789"
                android:inputType="phone" />
        </LinearLayout>

        <!-- Full Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Address"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etFullAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:background="@drawable/bg_edittext_rounded"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_10sdp"
            android:gravity="start"
            android:hint="Building no, Floor no, Flat no"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvFullAddressError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Address is required"
            android:textColor="#D32F2F"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_6sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Address is required"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_6sdp" />

        <!-- Location Tag -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Tag  (Optional)"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp" />

        <RadioGroup
            android:id="@+id/rgLocationTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:checked="true"
                app:buttonTint="@color/radio_tint" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office"
                android:layout_marginStart="@dimen/_16sdp"
                app:buttonTint="@color/radio_tint" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/cbDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set as default address"
            android:layout_marginTop="@dimen/_8sdp" />

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="@dimen/_16sdp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="@dimen/_40sdp"
                android:text="CANCEL"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                android:background="@drawable/bg_rounded"
                android:textAllCaps="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@drawable/btn_black_rounded"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
