<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/_10sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="24dp">

        <!-- Top bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvCancelTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Delivery Location section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Location"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="4dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_location"
                android:contentDescription="location" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="42342 - Madinah Principality - Al Madinah\nProvince Madinah"
                android:textColor="#222222"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Address Details title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- First Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:hint="John"
            android:inputType="textPersonName" />

        <!-- Last Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:hint="Doe"
            android:inputType="textPersonName" />

        <!-- Mobile Number (country selector + number) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_rounded">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_flag_us"
                    android:contentDescription="flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  +1  "
                    android:textSize="14sp"
                    android:layout_marginStart="6dp" />


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_down_arrow"
                    android:contentDescription="down" />
            </LinearLayout>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="123456789"
                android:inputType="phone" />
        </LinearLayout>

        <!-- Full Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Address"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etFullAddress"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:hint="Building no, Floor no, Flat no"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvFullAddressError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Address is required"
            android:textColor="#D32F2F"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Address is required"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="6dp" />

        <!-- Location Tag -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Tag  (Optional)"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rbHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set as default address"
            android:layout_marginTop="8dp" />

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="CANCEL"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="SAVE"
                android:textAllCaps="false"
                android:layout_marginStart="12dp"
                android:backgroundTint="#e91e63"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
